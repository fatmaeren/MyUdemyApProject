@model CreateServiceDto
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Hizmet İkonu </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="ServiceIcon" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Hizmet Başlığı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Açıklama </label>
        <div class="col-lg-6">
            <textarea type="text" class="form-control" asp-for="Description" rows="5"></textarea>
        </div>
    </div>
   
    <button class="btn mb-1 btn-secondary">
        Ekle <span class="btn-icon-right"><i class="fa fa-save"></i></span>
    </button>

</form>

