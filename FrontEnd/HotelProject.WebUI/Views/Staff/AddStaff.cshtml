@model AddStaffViewModel
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide"  method="post">
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Personel Adı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Personel Ünvanı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Sosyal Medya Hesabı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="SocialMedia1" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Sosyal Medya Hesabı 2</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="SocialMedia2" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Sosyal Medya Hesabı 3</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="SocialMedia3" />
        </div>
    </div>
    <button class="btn mb-1 btn-secondary">
        Ekle <span class="btn-icon-right"><i class="fa fa-save"></i></span>
    </button>

</form>

