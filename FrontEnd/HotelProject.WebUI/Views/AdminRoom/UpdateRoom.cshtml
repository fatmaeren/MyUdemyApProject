@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Oda Numarası </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="RoomNumber" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Oda Başlığı</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Title" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Oda Ücreti </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Price" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Banyo Sayısı</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="BathCount" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Yatak Sayısı</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="BedCount" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Kapak Görseli</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="RoomImage" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Açıklama</label>
        <div class="col-lg-6">
            <textarea type="text" class="form-control" asp-for="Description" rows="5"></textarea>
        </div>
    </div>
  
    <button class="btn mb-1 btn-secondary">
        Güncelle <span class="btn-icon-right"><i class="fa fa-save"></i></span>
    </button>

</form>
