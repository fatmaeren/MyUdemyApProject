@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Başlık </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Title1" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Başlık 2 </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Title2" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">İçerik </label>
        <div class="col-lg-6">
            <textarea type="text" class="form-control" asp-for="Content" rows="5" ></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Müşteri Sayısı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="CustomerCount" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Oda Sayısı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="RoomCount" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Çalışan Sayısı </label>
        <div class="col-lg-6">
            <textarea type="text" class="form-control" asp-for="StaffCount"></textarea>
        </div>
    </div>

    <button class="btn mb-1 btn-secondary">
        Güncelle <span class="btn-icon-right"><i class="fa fa-upload"></i></span>
    </button>

</form>

