@model CreateGuestDto
@{
    ViewData["Title"] = "AddGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Misafir Adı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Misafir Soyadı </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Surname" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Şehir </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>

    <button class="btn mb-1 btn-secondary">
        Ekle <span class="btn-icon-right"><i class="fa fa-save"></i></span>
    </button>

</form>
