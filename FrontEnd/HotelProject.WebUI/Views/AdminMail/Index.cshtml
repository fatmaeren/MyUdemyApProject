@model AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form class="form-valide" method="post">
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Alıcı Mail </label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="RecevierMail" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Konu</label>
        <div class="col-lg-6">
            <input type="text" class="form-control" asp-for="Subject" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-4 col-form-label">Mesaj</label>
        <div class="col-lg-6">
            <textarea type="text" class="form-control" asp-for="Body" rows="5"></textarea>
        </div>
    </div>

    <button class="btn mb-1 btn-secondary">
        Ekle <span class="btn-icon-right"><i class="fa fa-save"></i></span>
    </button>

</form>


